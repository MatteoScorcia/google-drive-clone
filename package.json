{
  "name": "google-drive-clone",
  "version": "v0.0.1",
  "private": true,
  "sideEffects": true,
  "type": "module",
  "description": "A React Router v7 Google Drive clone using Bun, Hono and Vitest.",
  "author": "Matteo Scorcia",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production react-router build",
    "dev": "bunx --bun vite",
    "start": "cross-env NODE_ENV=production bun ./build/server/index.js",
    "test": "vitest",
    "test:watch": "vitest watch",
    "typecheck": "react-router typegen && tsc",
    "check": "biome check --write ."
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@react-router/node": "^7.4.0",
    "@react-router/serve": "^7.4.0",
    "argon2": "^0.41.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "isbot": "^5.1.25",
    "lucide-react": "^0.483.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.4.0",
    "react-router-hono-server": "^2.11.0",
    "remix-auth": "^4.1.0",
    "remix-auth-form": "^3.0.0",
    "tailwind-merge": "^3.0.2",
    "tw-animate-css": "^1.2.4",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@react-router/dev": "^7.4.0",
    "@tailwindcss/vite": "^4.0.17",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.13.14",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "happy-dom": "^17.4.4",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.17",
    "typescript": "^5.8.2",
    "vite": "^6.2.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.9"
  }
}
